@model Book;
@{
    ViewData["Title"] = "AddBook";
}

<div class="row pt-3">
    <div class="col-6">
        <h3>Add Book</h3>
    </div>

    <div class="col-6 text-end">
        <a asp-controller="Home" asp-action="ShowBook" class="btn btn-info">Show Books</a>
    </div>
</div>
<div class="pt-3">

    <form method="post">
        <fieldset>

            <div class="form-group">
                <label asp-for="BookName" class="form-label mt-4"></label>
                <input asp-for="BookName" class="form-control">
                <span class="text-danger" asp-validation-for="BookName"></span>

            </div>
            <div class="form-group">
                <label asp-for="AuthorName" class="form-label mt-4"></label>
                <input asp-for="AuthorName" class="form-control">
                <span class="text-danger" asp-validation-for="AuthorName"></span>

            </div>
            <div class="form-group">
                <label asp-for="Publisher" class="form-label mt-4"></label>
                <input asp-for="Publisher" class="form-control">
                <span class="text-danger" asp-validation-for="Publisher"></span>

            </div>
            <div class="form-group">
                <label asp-for="Price" class="form-label mt-4"></label>
                <input asp-for="Price" class="form-control">
                <span class="text-danger" asp-validation-for="Price"></span>

            </div>


            <div class=" pt-4">
                <button type="submit" class="btn btn-info">Submit</button>
                <a asp-controller="Home" asp-action="Index" class="btn btn-info">Back</a>
            </div>

        </fieldset>
    </form>
</div>
<partial name="_Notification" />

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}